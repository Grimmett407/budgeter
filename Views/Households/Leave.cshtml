@model budgeter.Models.CodeFirst.Household

@{
    ViewBag.Title = "Leave";
}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <div class="well well-lg well-topspace">
            <h3 class="text-center">Are you sure you want to leave @ViewBag.HouseholdName?</h3>
            <hr />
            <section id="loginForm">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-actions text-center">
                        <button type="submit" class="btn btn-default">
                            <i class="fa fa-trash-o"></i> Leave
                        </button>
                        <span class="divider"> | </span>
                        @Html.ActionLink(linkText: "Cancel", actionName: "Details", controllerName: "Households", routeValues: new { id = ViewBag.HouseholdId }, htmlAttributes: "")
                    </div>
                }
            </section>
        </div>
    </div>
</div>
